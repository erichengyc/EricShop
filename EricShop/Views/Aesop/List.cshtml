@model EricShop.ViewModels.AesopListViewModel

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Eric Shop</title>
</head>
<body>
    <h1>@Model.CurrentCategory</h1>
    @foreach (var aesop in Model.Aesops)
    {
    <div>
        <h2>@aesop.Name</h2>
        <h3>@aesop.Price.ToString("c")</h3>
        <h4>@aesop.Category.CategoryName</h4>
    </div>
    }
</body>
</html>